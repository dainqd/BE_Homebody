                    "description": "User login info",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "login_request",
                                    "password"
                                ],
                                "properties": {
                                    "login_request": {
                                        "type": "string",
                                        "example": "user@example.com"

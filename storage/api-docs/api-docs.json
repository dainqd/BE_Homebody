                                            "type": "string",
                                            "example": "Nguyen Van A"
                                        },
                                        "email": {
                                            "type": "string",
                                            "format": "email",
                                            "example": "user@example.com"
                                        },
                                        "phone": {
                                            "type": "string",
                                            "example": "123456789"
